<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding">

    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lorem ipsum"/>-->

    <RelativeLayout
        android:id="@+id/relative_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            android:layout_marginRight="@dimen/padding_half"/>

        <LinearLayout
            android:id="@+id/linear_top_right_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/profile_image"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbl_count_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/reviews"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbl_count_followers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/pf_followers"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbl_count_following"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/pf_following"></TextView>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_margin="8dp"
            android:id="@+id/btn_edit_profile"
            android:layout_below="@+id/linear_top_right_container"
            android:layout_toRightOf="@+id/profile_image"
            android:text="@string/edit_profile"
            android:textAllCaps="false"
            style="@style/MyButton"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/lbl_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hahaha"
        android:layout_below="@+id/relative_header_container"/>

    <TextView
        android:id="@+id/lbl_user_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lorem ipsum dolor haleluyah alhamdulilah"
        android:layout_below="@+id/lbl_user_name"/>


</RelativeLayout>