<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/rel_next">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_sk_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="@string/pf_sk_ty"
                android:textSize="@dimen/font_standar"
                android:textColor="@color/colorGrey"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_marginTop="@dimen/padding_far"
                android:layout_marginBottom="@dimen/padding_half"
                android:textAllCaps="true"/>

            <com.fdbr.android.view.widget.FlowLayout
                android:id="@+id/fl_skin_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/txt_sk_type"/>

            <TextView
                android:id="@+id/txt_sk_tone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/pf_sk_to"
                android:textSize="@dimen/font_standar"
                android:textColor="@color/colorGrey"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_marginTop="@dimen/padding_far"
                android:layout_marginBottom="@dimen/padding_half"
                android:textAllCaps="true"
                android:layout_below="@id/fl_skin_type"/>

            <com.fdbr.android.view.widget.FlowLayout
                android:id="@+id/fl_skin_tone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/txt_sk_tone"/>

            <TextView
                android:id="@+id/txt_sk_undertone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/pf_sk_un"
                android:textSize="@dimen/font_standar"
                android:textColor="@color/colorGrey"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_marginTop="@dimen/padding_far"
                android:layout_marginBottom="@dimen/padding_half"
                android:textAllCaps="true"
                android:layout_below="@id/fl_skin_tone"/>

            <com.fdbr.android.view.widget.FlowLayout
                android:id="@+id/fl_skin_undertone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/txt_sk_undertone"/>

            <TextView
                android:id="@+id/txt_hr_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/pf_hr_ty"
                android:textSize="@dimen/font_standar"
                android:textColor="@color/colorGrey"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_marginTop="@dimen/padding_far"
                android:layout_marginBottom="@dimen/padding_half"
                android:textAllCaps="true"
                android:layout_below="@id/fl_skin_undertone"/>

            <com.fdbr.android.view.widget.FlowLayout
                android:id="@+id/fl_hr_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/txt_hr_type"/>

            <TextView
                android:id="@+id/txt_hr_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/pf_hr_tx"
                android:textSize="@dimen/font_standar"
                android:textColor="@color/colorGrey"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_marginTop="@dimen/padding_far"
                android:layout_marginBottom="@dimen/padding_half"
                android:textAllCaps="true"
                android:layout_below="@id/fl_hr_type"/>

            <com.fdbr.android.view.widget.FlowLayout
                android:id="@+id/fl_hr_tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_marginBottom="@dimen/padding"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/txt_hr_tx"/>

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/rel_next"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/next"
            android:textSize="@dimen/font_standar"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>

</RelativeLayout>